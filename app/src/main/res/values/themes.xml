<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Base.Theme.API" parent="Theme.Material3.DayNight">
    <item name="android:statusBarColor">@color/desc</item>
</style>

<style name="Theme.API.WithActionBar" parent="Theme.Material3.DayNight">
    <item name="android:statusBarColor">@color/desc</item>
    <item name="actionBarStyle">@style/CustomActionBar</item>
</style>

<style name="Theme.API" parent="Base.Theme.API" />
<style name="CustomActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">#FFFFFF</item>
</style>




<style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
    <item name="background">@color/text</item>
    <item name="titleTextStyle">@style/CustomActionBarTitle</item>
</style>
</resources>